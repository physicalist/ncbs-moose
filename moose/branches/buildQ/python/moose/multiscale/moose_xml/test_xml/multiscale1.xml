<?xml version="1.0" encoding="UTF-8"?>
<!-- First describe the domains inside the cells -->
<multiscale>
  <domains>
    <domain id="1" name="Soma" cellId="PurkinjeCell_t" type="electrical">
      <!-- 
         Morphology of domain describes the shape and its location. 
         Morphology can have a absolute coordinate system or anatomical one. 
     -->
    <morphology import="no" coordinateSystem="absolute">
      <shape type="simple" name="cylinder">
        <diameter>10.0</diameter>
        <length>20.0</length>
      </shape>
      <coordinates of="center" type="absolute">
        <x>10.0</x>
        <y>20.0</y>
        <z>-1</z>
      </coordinates>
    </morphology>
    <propterty></propterty>
  </domain>


  <domain id="2" cellId="PurkinjeCell_t" type="electrical">
    <!-- 
         We can also import the morphology from a sengment of a cell.
         If no coordinate system is specified, proximal/distal should be default.
      -->
    <morphology import="yes">
      <import from="morphology_PurkinjeCell_t" xmlType="neuroml2">
        <segment id="0" name="Soma"></segment>
      </import>
    </morphology>
    <!-- Electrical properties of this segment. -->
    <propterty>
      <model name="soma" type="simpleCompartment">
        <Vm unit="V">1</Vm>
        <Cm unit="F">1.0</Cm>
        <Rm unit="Ohm">10e3</Rm>
      </model>
    </propterty>
  </domain>


  <domain id="3" cellId="PurkinjeCell_t" type="electrical">
    <!-- By default, use the proximal/distal coordinate system. -->
    <morphology import="no">
      <proximal x="0.0" y="-240.0" z="0.0" diameter="2.0"/>
      <distal x="-5.0" y="-260.0" z="0.0" diameter="2.0"/>
    </morphology>
    <property>
      <model name="soma" type="simpleCompartment">
        <Vm unit="V">1</Vm>
        <Cm unit="F">1.0</Cm>
        <Rm unit="Ohm">10e3</Rm>
      </model>
    </property>
  </domain>


  <domain id="4" cellId="PurkinjeCell_t" type="chemical">
    <morphology>
      <shape type="simple">cylinder</shape>
      <diameter>10.0</diameter>
      <length>20.0</length>
      <coordinates of="center" type="relative" referenceCell="cellA">
        <x>-3</x>
        <y>2</y>
        <z>-1</z>
      </coordinates>
    </morphology>
    <propterty>
      <model name="dendrite" type="simpleCompartment">
        <length unit="um">100</length>
        <diameter unit="um">6</diameter>
      </model>
    </propterty>
  </domain>

  <!-- Chemincal domains. -->
  <domain id="5" cellId="SimpleCell_t" type="chemical">
    <morphology>
      <shape type="simple" name="cylinder">
        <diameter>10.0</diameter>
        <length>20.0</length>
      </shape>
      <coordinates of="center" type="relative" referenceCell="cellB">
        <x>-3</x>
        <y>3</y>
        <z>11</z>
      </coordinates>
    </morphology>
    <property>
      <model name="CaCurrent">
        <ICa unit="uA">1.2e-5</ICa>
        <CCa unit="m/V">3.2</CCa>
      </model>
    </property>
  </domain>
</domains>

<mappings>
  <mapping fromDomain="2" toDomain="5">
    <relation type="linear">
      <lhs>Vm</lhs>
      <rhs>3.4 * CCa - 0.9</rhs>
    </relation>
    <relation type="linear">
      <lhs>Rm</lhs>
      <rhs>-3.4 * ICa + 23</rhs>
    </relation>
  </mapping>
</mappings>
</multiscale>
